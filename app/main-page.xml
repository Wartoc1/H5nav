<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="My App" icon="" />

 <GridLayout columns="*, *, *, *" rows="1*,2*,2*,2*,2*,2*, 6* " margin="20" padding="20" backgroundColor="lightgray">
        
        <Label text="Main Page" row="0" col="0" colSpan="4" backgroundColor="lightblue" class="h1 text-center" />
        
        <!-- 1. Tal -->
        <Button id="btn1" text="Hent 1. Tal" row="1" col="0" colSpan="4" backgroundColor="lightgreen" tap="{{onGoSecond}}"
        value="1" class="h2 text-center" />
        <Label text="{{tal1}}" row="2" col="0" colSpan="4" class="h2 text-left" />
        <Label id="FirstNum" row="2" col="1" colSpan="4" class="h2 text-center" />

        <!-- 2. Tal -->
        <Button id="btn2" text="Hent 2. Tal" row="3" col="0" colSpan="4" backgroundColor="lightgreen" tap="{{onGoSecond}}" 
        value="2" class="h2 text-center" />
        <Label text="{{tal2}}" row="4" col="0" colSpan="4" class="h2 text-left" />
        <Label id="SecNum" row="4" col="1" colSpan="4" class="h2 text-center" />

        <Button text="+" row="5" col="0" colSpan="1" backgroundColor="lightgreen" tap="" class="h2 text-center" />
        <Button text="-" row="5" col="1" colSpan="1" backgroundColor="lightgreen" tap="" class="h2 text-center" />
        <Button text="*" row="5" col="2" colSpan="1" backgroundColor="lightgreen" tap="" class="h2 text-center" />
        <Button text="/" row="5" col="3" colSpan="1" backgroundColor="lightgreen" tap="" class="h2 text-center" />

        <Label text="Result" row="6" col="0" colSpan="4" class="h2 text-left" />
        <Label id="res" row="6" col="1" colSpan="4" class="h2 text-center" />

    </GridLayout>
</Page>
